@typeparam TValue where TValue : struct

<RadzenFormField Text="Step">
    <RadzenNumeric @bind-Value="Step"/>
</RadzenFormField>
<RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" AlignItems="AlignItems.Center">
    <RadzenLabel Component="ShowUpDownInput" Text="Show Up Down"/>
    <RadzenSwitch Name="ShowUpDownInput" @bind-Value="Field.ShowUpDown"/>
</RadzenStack>

<RadzenFormField Text="Format">
    <RadzenTextBox @bind-Value="@Field.Format"/>
</RadzenFormField>
