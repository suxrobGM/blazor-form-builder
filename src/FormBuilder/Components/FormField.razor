@using global::FormBuilder.Models

<RadzenFormField Class="w-100" Text="@Field.Label" AllowFloatingLabel="true">
    <Start>@Prepend</Start>
    <ChildContent>
        @switch (Field)
        {
            case TextField textField:
                <RadzenTextBox
                    Name="@textField.Name"
                    @bind-Value="textField.Value"
                    ReadOnly="Disabled">
                </RadzenTextBox>
                break;
            case SelectField selectField:
                <RadzenDropDown
                    Name="@Field.Name"
                    @bind-Value="selectField.Value"
                    Data="@selectField.Options"
                    TextProperty="Text"
                    ValueProperty="Value"
                    ReadOnly="Disabled">
                </RadzenDropDown>
                break;
            case NumericIntField numericIntField:
                <RadzenNumeric
                    Name="@numericIntField.Name"
                    @bind-Value="numericIntField.Value"
                    ReadOnly="Disabled">
                </RadzenNumeric>
                break;
            case NumericDoubleField numericDoubleField:
                <RadzenNumeric
                    Name="@numericDoubleField.Name"
                    @bind-Value="numericDoubleField.Value"
                    ReadOnly="Disabled">
                </RadzenNumeric>
                break;
            case DateField dateField:
                <RadzenDatePicker
                    Name="@dateField.Name"
                    @bind-Value="dateField.Value"
                    ReadOnly="Disabled"/>
                break;
        }
    </ChildContent>
    <End>@Append</End>
</RadzenFormField>
